<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/_F6F6F6"
    tools:context=".activities.Payment">
    <!-- Body of payment Activity-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1000dp"
            android:orientation="vertical">

            <!--Shipping Info   -->
            <include layout="@layout/shippingaddress" />

            <!--Product Information & Delivery Services   -->
            <include layout="@layout/iteminfo_deliveryservice" />
            <!--Add Description & Payment Method    -->
            <include layout="@layout/description_paymentmethod" />

            <View
                android:layout_width="match_parent"
                android:layout_height="300dp" />
        </LinearLayout>

    </ScrollView>

    <!--    Bottom Card-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/popup_sheet"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginVertical="10dp"
                android:text="@string/Total"
                android:textColor="@color/_9A9A9A"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginVertical="10dp"
                android:text="$154"
                android:textColor="@color/_E41A4A"
                android:textSize="20sp" />
        </RelativeLayout>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/buyNowBTN"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginHorizontal="40dp"
            android:layout_marginVertical="10dp"
            android:backgroundTint="@color/_E41A4A"
            android:onClick="buyNowAction"
            android:text="@string/buy"
            android:textColor="@color/white"
            app:shapeAppearanceOverlay="@style/PillShapeAppearance" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Splash application theme. -->
    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="colorPrimary">@color/_F6F6F6</item>
        <item name="colorPrimaryDark">@color/_F6F6F6</item>
        <item name="colorAccent">@color/_F6F6F6</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
    </style>
    <!-- Splash theme. -->

    <!-- Base application theme. -->
    <style name="Theme.MindshopUI" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/_F6F6F6</item>
        <item name="colorPrimaryVariant">@color/_F6F6F6</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/_F6F6F6</item>
        <item name="colorSecondaryVariant">@color/_F6F6F6</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/_F6F6F6</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="PillShapeAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="ThemeOverlay.MindshopUI.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>

</resources>